{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "headers": [
    {
      "source": "/_next/static/css/(.*)\\.css",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_next/static/js/(.*)\\.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_next/static/chunks/(.*)\\.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/llms.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/index.php", 
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/services",
      "destination": "/loan-programs",
      "permanent": true
    },
    {
      "source": "/programs",
      "destination": "/loan-programs",
      "permanent": true
    },
    {
      "source": "/locations",
      "destination": "/areas",
      "permanent": true
    },
    {
      "source": "/service-areas",
      "destination": "/areas",
      "permanent": true
    },
    {
      "source": "/blog",
      "destination": "/guides",
      "permanent": true
    },
    {
      "source": "/neighborhoods",
      "destination": "/neighborhood-guide", 
      "permanent": true
    },
    {
      "source": "/rates",
      "destination": "/calculator",
      "permanent": true
    },
    {
      "source": "/mortgage-rates",
      "destination": "/calculator",
      "permanent": true
    },
    {
      "source": "/tools",
      "destination": "/calculator",
      "permanent": true
    },
    {
      "source": "/:path*/index.html",
      "destination": "/:path*",
      "permanent": true
    },
    {
      "source": "/:path*/index.php",
      "destination": "/:path*", 
      "permanent": true
    },
    {
      "source": "/:path*//",
      "destination": "/:path*/",
      "permanent": true
    }
  ],
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/sitemap-index.xml",
      "destination": "/sitemap-index.xml" 
    },
    {
      "source": "/sitemap-images.xml",
      "destination": "/sitemap-images.xml"
    },
    {
      "source": "/sitemap-news.xml", 
      "destination": "/sitemap-news.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/robots.txt"
    }
  ]
}